        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/tvSelectedImage_DF"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_toRightOf="@+id/ivImage_DF"-->
        <!--android:layout_toEndOf="@+id/ivImage_DF" />-->


</RelativeLayout>
